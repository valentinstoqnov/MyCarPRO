<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/img_view_list_service"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_service"
        app:civ_fill_color="@android:color/holo_purple" />

    <TextView
        android:text="Lights"
        android:id="@+id/tv_list_service_type"
        android:textSize="16sp"
        android:paddingLeft="72dp"
        android:paddingRight="16dp"
        app:layout_constraintTop_toTopOf="@id/img_view_list_service"
        android:textColor="@color/colorPrimaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/date_price_placeholder"
        android:paddingLeft="72dp"
        android:paddingRight="16dp"
        android:id="@+id/tv_list_service_date_price"
        android:textSize="13sp"
        android:textColor="@color/colorSecondaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/img_view_list_service"
        app:layout_constraintTop_toBottomOf="@id/tv_list_service_type" />
</android.support.constraint.ConstraintLayout>