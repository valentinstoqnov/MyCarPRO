<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_margin="8dp"
        android:id="@+id/card_view_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/img_view_card_vehicle_photo"
                android:layout_width="0dp"
                android:layout_height="120dp" />

            <LinearLayout
                android:background="#59000000"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:orientation="vertical"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:maxHeight="120dp">

                <TextView
                    android:maxLength="2"
                    android:id="@+id/tv_card_vehicle_day"
                    android:padding="2dp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"
                    android:text="12"
                    android:textSize="24sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:maxLength="3"
                    android:id="@+id/tv_card_vehicle_month"
                    android:padding="2dp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"
                    android:text="May"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:maxLength="4"
                    android:id="@+id/tv_card_vehicle_year"
                    android:padding="2dp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"
                    android:text="2017"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                app:layout_constraintTop_toBottomOf="@id/img_view_card_vehicle_photo"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/tv_card_vehicle_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="24dp"
                android:text="The best car"
                android:textSize="24sp"/>

            <TextView
                android:text="Audi RS7"
                android:textSize="14sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:id="@+id/tv_card_vehicle_make_and_model"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_card_vehicle_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_card_vehicle_odometer"
                app:layout_constraintTop_toBottomOf="@id/tv_card_vehicle_make_and_model"
                app:layout_constraintLeft_toLeftOf="parent"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp"
                android:textSize="14sp"
                android:text="1212300 km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_card_vehicle_delete"
                style="@style/Widget.AppCompat.Button.Borderless"
                app:layout_constraintTop_toBottomOf="@id/tv_card_vehicle_odometer"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:padding="8dp"
                android:text="Delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/btn_card_vehicle_view"
                app:layout_constraintTop_toBottomOf="@id/tv_card_vehicle_odometer"
                app:layout_constraintRight_toLeftOf="@id/btn_card_vehicle_delete"
                app:layout_constraintBottom_toBottomOf="parent"
                android:padding="8dp"
                android:text="View"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>