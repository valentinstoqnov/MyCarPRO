<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#C8E6C9"
    android:gravity="bottom|center_horizontal"
    android:padding="16dp"
    tools:context="elsys.mycar.mycarpro.profile.ProfileFragment">


    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/img_view_profile"
        android:src="@drawable/ic_person"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView android:text="@string/sign_out"
        android:id="@+id/tv_profile_username"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <TextView android:text="@string/sign_out"
        android:id="@+id/tv_profile_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <TextView android:text="@string/sign_out"
        android:id="@+id/tv_profile_email"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btn_profile_logout"
        android:layout_marginBottom="60dp"
        android:textColor="@android:color/white"
        android:background="@color/colorProfileTabSelected"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sign_out"/>
</LinearLayout>
